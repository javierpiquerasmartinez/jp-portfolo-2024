---
import Layout from "../layouts/Layout.astro";

import SectionContainer from "../components/SectionContainer.astro";
import Intro from "../components/Intro.astro";

const title =
	"Javier Piqueras Portfolio 👨🏻‍💻 - FullStack JavaScript Web Application Software Engineer";
const description =
	"Javier Piqueras Portolio. More than 7 years of experience in the Web Application Development as a JavaScript Fullstack. Contact for more information.";
---

<Layout title={title} description={description}>
	<main>
		<SectionContainer id="home" class="jp-flex-row" background="jp-intro">
			<Intro />
		</SectionContainer>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		max-width: 100%;
		gap: 50px;
		width: 100%;
	}
</style>

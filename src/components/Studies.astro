---
import SectionTitle from "./SectionTitle.astro";
import { STUDIES } from "../constants/studies";
---

<SectionTitle>Studies</SectionTitle>
<div class="container">
  {
    STUDIES.map((s) => (
      <article>
        <div>
          <h3>{s.title}</h3>
          <h4 class="jp-institution">{s.institution}</h4>
        </div>
        <h4>{s.date}</h4>
      </article>
    ))
  }
</div>

<style>
  .container {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
  }
  article {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 10px;
    box-shadow: 2px 2px 25px 0px #0000002b;
    padding: 20px;
  }
  h3 {
    color: #456685;
  }
  .jp-institution {
    font-weight: 300;
  }
</style>

---
import { PROJECTS } from "../contants/projects";
---

{
  PROJECTS.map((p) => (
    <>
      <h3>{p.name}</h3>
      <div>{p.description}</div>
      <div>
        Project Repository: <a href={p.github}>{p.github}</a>
      </div>
      <ul>
        {p.tags.map((tagComponent) => (
          <li>
            <tagComponent.icon color={tagComponent.color} />
          </li>
        ))}
      </ul>
      <img src={p.img} alt={p.description} />
    </>
  ))
}

<style>
  a {
    text-decoration: underline;
  }
  ul {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 5px;
    flex-wrap: wrap;
  }
</style>

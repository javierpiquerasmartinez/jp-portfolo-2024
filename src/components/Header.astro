---
const jpLogoURL = "/jp-logo.png";
---

<header>
  <a href="#top">
    <img class="jp-logo" src={jpLogoURL} alt="Javier Piqeras Logo" />
  </a>
  <nav class="jp-nav">
    <a href="#top">Home</a>
    <a href="#aboutme">About Me</a>
    <a href="#experience">Experience</a>
    <a href="#studies">Studies</a>
    <a href="#contact">Contact</a>
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 1120px;
    max-width: 100%;
    padding-top: 15px;
    padding-bottom: 15px;
  }
  .jp-logo {
    width: 50px;
  }
  .jp-nav {
    display: flex;
    flex-direction: row;
    gap: 40px;
  }
  a {
    color: #000;
  }
</style>

---
import TimeIcon from "./icons/TimeIcon.astro";
---

<li>
  <header>{Astro.props.title}</header>
  <aside class="default-padding"><TimeIcon />{Astro.props.date}</aside>
  <main class="default-padding">{Astro.props.description}</main>
</li>

<style>
  li {
    border-radius: 15px;
    box-shadow: 2px 2px 25px 0px rgba(0, 0, 0, 0.35);
    box-shadow: 2px 2px 25px 0px #0000002b;
    padding: 3px;
    padding-bottom: 12px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  header {
    border-radius: 15px 15px 0px 0px;
    background: #456685;
    color: white;
    font-size: 1.4em;
    font-weight: 600;
    padding: 12px;
  }
  .default-padding {
    padding-left: 12px;
    padding-right: 12px;
  }
  aside {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 1.2em;
  }
  main {
    color: #808080;
    font-weight: 400;
    line-height: 40px;
    text-align: justify;
  }
</style>
